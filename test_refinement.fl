print("\n--- Testing float operations ---")
let f1 = 5.5
let f2 = 2.0
print(f1 + f2)
print(f1 - f2)
print(f1 * f2)
print(f1 / f2)
print(f1 > f2)
print(f1 < f2)
print(f1 == 5.5)

