print("Testing Tensor Initializers...")
let z = zeros([2, 3])
print("zeros([2, 3]):\n", z)

let o = ones([3, 2])
print("ones([3, 2]):\n", o)

let r = rand([2, 2])
print("rand([2, 2]):\n", r)

print("\nTesting Element-wise Math...")
let a = ones([2, 2])
let b = ones([2, 2])
print("a + b:\n", a + b)
print("a - b:\n", a - b)
print("a * b:\n", a * b)
# print("a / b:\n", a / b) # This might have issues if zeros are involved, but here it's 1.0 / 1.0

print("\nTesting Matrix Multiplication (@ and dot)...")
let m1 = zeros([2, 3]) + 2.0
let m2 = ones([3, 2]) * 3.0
print("m1 @ m2:\n", m1 @ m2)
print("dot(m1, m2):\n", dot(m1, m2))

print("\nTesting Shape Manipulation...")
let t1 = ones([2, 3])
print("t1:\n", t1)
print("transpose(t1):\n", transpose(t1))

let t2 = ones([4])
print("t2:\n", t2)
let reshaped = reshape(t2, [2, 2])
print("reshape(t2, [2, 2]):\n", reshaped)

print("\nTesting Reductions...")
let t3 = ones([2, 5]) 
print("sum(t3):", sum(t3))   # Expected 10.0
print("mean(t3):", mean(t3)) # Expected 1.0
